{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "no-console": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import |^export {(.*?)}",
        "check-strings": true,
        "check-regex": false
      }
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-string-literal": false,
    "no-empty": true,
    "no-var-requires": false,
    "ordered-imports": false,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "rulesDirectory": []
}
